KUBE_API_ADDRESS="--advertise-address={{node_ip}}"
KUBE_API_ETCD="--etcd-servers={{etcd.servers}} --etcd-cafile=/etc/kubernetes/ssl/ca.pem --etcd-certfile=/etc/kubernetes/ssl/kubernetes.pem --etcd-keyfile=/etc/kubernetes/ssl/kubernetes-key.pem"
KUBE_API_SERVICE_ADDRESSES="--service-cluster-ip-range={{k8s.cluster_ip_range}}"
KUBE_API_ADMISSION_CONTROL="--admission-control=NamespaceLifecycle,ServiceAccount,LimitRanger,DefaultStorageClass,ResourceQuota"
KUBE_API_AUDIT="--audit-log-maxage=30 --audit-log-maxbackup=3 --audit-log-maxsize=100 --audit-log-path=/var/log/audit.log"
KUBE_API_AUTH="--authorization-mode=RBAC --runtime-config=rbac.authorization.k8s.io/v1 --enable-bootstrap-token-auth --token-auth-file=/etc/kubernetes/token.csv --basic-auth-file=/etc/kubernetes/basic.csv"
KUBE_API_TLS="--tls-cert-file=/etc/kubernetes/ssl/kubernetes.pem --tls-private-key-file=/etc/kubernetes/ssl/kubernetes-key.pem --client-ca-file=/etc/kubernetes/ssl/ca.pem --service-account-key-file=/etc/kubernetes/ssl/ca-key.pem"
KUBE_API_ARGS="--service-node-port-range=1-65535 --apiserver-count={{k8s.apiservercount}} --event-ttl=1h"